{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "outDir": "./lib",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports":true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "experimentalDecorators": true,
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "ge": ["src/index.ts"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "src/stories/**/*",
    ],
    
}